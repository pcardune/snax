{
  "compilerOptions": {
    "jsx": "react-jsx",

    "composite": true,
    "declarationMap": true,

    "rootDir": ".",
    "outDir": "../dist",

    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2021",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "strict": true,
    "strictNullChecks": true
  }
}
