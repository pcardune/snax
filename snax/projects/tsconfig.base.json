{
  "compilerOptions": {
    "jsx": "react-jsx",

    "composite": true,
    "declarationMap": true,

    "rootDir": ".",
    "outDir": "../dist",
    "sourceMap": true,
    
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "ES2021",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "strict": true,
    "strictNullChecks": true,
    "verbatimModuleSyntax": true,
  }
}
